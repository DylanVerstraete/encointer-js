{
  "extends": "./node_modules/@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths":
    {
      "@encointer/util": ["packages/util/src"],
      "@encointer/util/*": ["packages/util/src/*"],
      "@encointer/worker-api": ["packages/worker-api/src"],
      "@encointer/worker-api/*": ["packages/worker-api/src/*"]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
